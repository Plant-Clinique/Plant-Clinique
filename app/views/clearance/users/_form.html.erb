<div style = "background-color: #98FFB3">
  <div class="row" style = "height: 480px;">
    <div class = "col-3">
    </div>

    <div class="col-md-6 bg-white">

      <div class = "row text-center" style = "height: 50px;">
      </div>

      <h1 class='text-center'>Sign up</h1>

      <%= form_with(model: user) do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="text-field">
          <%= form.label :username %>
          <%= form.text_field :username, class: 'mb-1 form-control'  %>
        </div>

        <div class="text-field">
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', class: 'mb-1 form-control'  %>
        </div>

        <div class="password-field">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'mb-1 form-control'  %>
        </div>

        <div class = "row">
          <div class = "col-md-4">
          </div>
          <div class = 'text-center'>
            <%= form.submit "Create my account", class: "mt-2 btn btn-warning" %>
          </div>
          <div class = "col-md-4">
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
