            </li>
          </span>

          <span>
            <li class="nav-link <%= 'active' if current_page?(main_app.store_locators_path) %> nav-item">
              <i class="fa fa-map" aria-hidden="true"></i> <%= link_to "Maps", main_app.store_locators_path, class: "mx-2 " %>
            </li>
          </span>

          <span>
            <li class="nav-link <%= 'active' if current_page?(notifications_path) %> nav-item"> 
              <a href="<%= notifications_path %>" class="notification">
              <i class="fa fa-bell" style="color:black;" aria-hidden="true"></i>
              <span style="color:black;">Notifications</span>
              <!-- if reminders.unread? -->
              <span class="badge"><%= Notification.unread_count(current_user.id).to_i %></span> <!--reminders.unread.length-->
              <!--  end // also to emails --> 
              </a>
            </li>
          </span>

          <span>
              <li class="nav-link <%= 'active' if current_page?(main_app.reminders_path) %> nav-item"> 
                <a href="<%= main_app.reminders_path %>" class="notification">
                <i class="fa fa-clock" aria-hidden="true"></i>
                <span>Reminders</span>
                <!-- if reminders.unread? -->
                <span class="badge" style="background-color: red;">3</span> <!--reminders.unread.length-->
                <!--  end // also to emails --> 
                </a>
              </li>
          </span>


          <span>
            <li class="nav-link <%= 'active' if current_page?(main_app.user_path(current_user.id)) %> nav-item">
              <div class="row">
                <div class="col-8">
                  <i class="fa fa-user" aria-hidden="true"></i><%= link_to "My Account", main_app.user_path(current_user.id), class: "mx-2 "  %>
                </div>
                <div class="dot">
                  <%= image_tag current_user.gravatar_url(:email => current_user.email)%>
                </div>
              </div>
            </li>
          </span>
          <span>
            <li class="nav-link nav-item">
              <i class="fa fa-sign-out" aria-hidden="true"></i> <%= link_to 'Sign out', main_app.sign_out_path, class: "mx-2 ", method: :delete %>
            </li>
          </span>
          <% else %>
          <span>
            <i class="fa fa-sign-in" aria-hidden="true"></i> <li ><%= link_to 'Sign in', main_app.sign_in_path, class: "mx-2 " %></li>
          </span>
          <% end %>
