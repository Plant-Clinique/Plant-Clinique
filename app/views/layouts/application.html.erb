    <!-- suprise cool background JS - maybe for just the home page? -->

    <script>
    var canvas = document.getElementById('myCanvas'); 
    var context = canvas.getContext('2d'); 
    context.fillRect(0, 0, 50, 50);

    context.beginPath(); 
    context.moveTo(0, 0); 
    context.lineTo(100, 100); 
    context.lineWidth = 1; 
    context.strokeStyle = 'rgb(255, 150, 168)'; 
    context.stroke();

    </script>

