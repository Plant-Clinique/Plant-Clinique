                <%= link_to 'Edit', edit_user_plant_path(plant) %>
              </div>
            </a>
              <a href="#" class="btn btn-primary">See Profile</a>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>


  <!-- The code for the bottom row with buttons-->
