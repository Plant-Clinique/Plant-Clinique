            <img class="card-img-top" src=<%= "#{plant.img_url}" %>  alt="Picture for this plant">
            <div class="card-body">
              <h4 class="card-title"> <%="Plant name: #{plant.name}"%> </h4>

              
              <p class="card-text">
                <div class = "row">
                  <p>
                    <%= "Plant age: #{plant.age}" %>
                  <br>
                    <%= "Type: #{plant.plant_type}" %>
                  <br>
                    <%= "Description: #{plant.description}" %>
                  </p>
                </div>
                <div class = "row">
                </div>
              </p>
              <a>
              <div class="btn btn-primary">
                <%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %> 
