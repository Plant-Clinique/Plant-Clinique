<%= form_for :session, url: session_path do |form| %>
  <% flash.each do |key, value| %>
    <div class="bg-danger text-light flash <%= key %>"><%= value %></div>
  <% end %>

  <div class="m-2 email-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: 'mb-1 form-control'  %>
  </div>
  
  <div class="m-2 password-field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'mb-1 form-control'  %>
  </div>

  <div class = "m-2 row">
    <div class = 'text-center'>
      <%= form.submit "Enter the garden", class: "mt-2 btn btn-warning" %>
    </div>
  </div>
  
  <div class="m-2 mb-4 other-links">
    <%= link_to t(".forgot_password"), new_password_path %>
    <br>
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end %>
  </div>

<% end %>
