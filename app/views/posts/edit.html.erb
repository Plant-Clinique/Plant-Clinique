<div class="card my-5" style="background-image: url('https://cdn.pixabay.com/photo/2017/10/11/17/08/plant-2841719_1280.jpg');
      background-size: cover;width: 100%;height: 110%;display: inline-block;background-position: center; background-repeat: no-repeat; background-attachment:fixed;">
  <div class="card-body" >
    <h1>Edit Post</h1>

    <%= render 'form', post: @post %>

    <div class="mt-2">
      <%= link_to 'Remove', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mr-2 text-light' %>
    </div>
    <div class="mt-2">
      <%= link_to 'Back', @post, class: 'btn btn-success mr-2 text-light' %>
    </div>
  </div>
</div>

<div style="height:150px;"> </div>
