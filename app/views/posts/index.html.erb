<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary text-light' %>
<hr>
<% @posts.each do |post| %>
  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
      <% if post.user.id.to_i == current_user.id.to_i %>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary text-light' %>
      <% end %>
    </div>
  </div>
<% end %>